<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaskelensky.tictactoe.GamePlace"
    android:background="@drawable/back">

    <ImageView
        android:id="@+id/gameplaceboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/to_do"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gametable" />

    <TableLayout
        android:layout_width="375dp"
        android:layout_height="375dp"
        app:layout_constraintBottom_toBottomOf="@+id/gameplaceboard"
        app:layout_constraintEnd_toEndOf="@+id/gameplaceboard"
        app:layout_constraintStart_toStartOf="@+id/gameplaceboard"
        app:layout_constraintTop_toTopOf="@+id/gameplaceboard"
        app:layout_constraintVertical_bias="1.0"
        android:layout_centerHorizontal="true"
        android:rowCount="3"
        android:columnCount="3">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b00"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/b01"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/b02"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b10"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/b11"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/b12"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b20"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/b21"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/b22"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/transparent"
                />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
